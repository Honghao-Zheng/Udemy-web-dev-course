<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= ofDay %></h1>
    </div>

     <div class="box">
    <%   event.forEach(function(item){  %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=item._id %>" onChange="this.form.submit()">
       <p><%= item.name %> </p>
       </div>
       <input type="hidden" name="listName" value="<%=ofDay %>"></input>
      </form>

      <% }) %>

       <form action="/" method="post">
         <input type="text" name="thing" placeholder="New item" autocomplete="off">
         <button type="submit" name="list" value=<%= ofDay %> >+</button>
       </form>
     </div>
<%- include("footer") -%>
